{
    "name": "Noteworthy",
    "version": "1.4.4",
    "description": "Noteworthy is an easy-to-use note taking app designed to be simplistic, yet powerful.\n\nFor more information, visit this project at www.adeolauthman.com/projects/Noteworthy.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build-MacOS": "electron-packager . Noteworthy --asar=true && cp NoteworthyAppLogo.icns Noteworthy-darwin-x64/Noteworthy.app/Contents/Resources/electron.icns",
        "build-Windows": "electron-packager . Noteworthy --platform=win32 --overwrite --arch=ia32 --asar=true --icon=NoteworthyAppLogo.icns --prune=true --out=release-builds",
        "clean": "rm -rf -R Noteworthy-darwin-x64",
        "electron-toolkit": "electron ./node_modules/electron-toolkit",
        "dist": "electron-builder --x64 --mac"
    },
    "repository": "https://github.com/Authman2/Noteworthy",
    "keywords": [
        "Noteworthy",
        "Notes",
        "School",
        "College",
        "Work"
    ],
    "author": "Adeola Uthman",
    "license": "MIT",
    "devDependencies": {
        "electron": "~1.6.2",
        "electron-builder": "^19.56.2",
        "electron-packager": "^9.0.1",
        "electron-toolkit": "^1.0.24"
    },
    "dependencies": {
        "alertify.js": "^1.0.12",
        "asar": "^0.13.0",
        "diff": "^3.5.0",
        "dropbox": "^2.5.7",
        "electron-is-dev": "^0.3.0",
        "electron-json-storage": "^4.1.1",
        "electron-log": "^2.2.16",
        "electron-updater": "^2.23.3",
        "electron-window-manager": "^1.0.4",
        "firebase": "^4.3.0",
        "highlight.js": "^9.12.0",
        "jquery": "^3.2.1",
        "jsonfile-updater": "^2.1.0",
        "jspdf": "^1.3.5",
        "jszip": "^3.1.4",
        "markdown-it": "^8.4.1",
        "markdown-it-checkbox": "^1.1.0",
        "markdown-it-mark": "^2.0.0",
        "markdown-it-sub": "^1.0.0",
        "markdown-it-sup": "^1.0.0",
        "moment": "^2.22.2",
        "nodemailer": "^4.4.0",
        "shelljs": "^0.7.8",
        "showdown": "^1.8.6",
        "spectrum-colorpicker": "^1.8.0",
        "turndown": "^4.0.2",
        "watchjs": "0.0.0"
    },
    "build": {
        "appId": "com.adeolauthman.Noteworthy",
        "copyright": "Copyright Â© 2018 Adeola Uthman",
        "productName": "Noteworthy",
        "electronVersion": "1.6.15",
        "asar": true,
        "directories": {
            "app": "/Users/adeolauthman/Documents/AdeolasCodingStuff/WebDevelopment/Noteworthy",
            "output": "dist"
        },
        "mac": {
            "asar": "true",
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.productivity"
        },
        "publish": {
            "provider": "github",
            "repo": "https://github.com/Authman2/Noteworthy",
            "owner": "Adeola Uthman",
            "token": "c527b4b6ef70fcdd2059ad8d9cd5ecbb08749fd9",
            "vPrefixedTagName": true,
            "releaseType": "release",
            "private": true
        }
    }
}
